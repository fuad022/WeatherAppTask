<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherAppTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/bottom_nav</item>
        <!-- Disable force dark mode. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!--  -->
        <item name="actionModeBackground">@color/contextual_action_bar_color</item>
        <item name="actionModeCloseButtonStyle">@style/closeButton</item>
    </style>

    <style name="Theme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_slab_regular</item>
    </style>

    <style name="closeButton" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/white</item>
    </style>
</resources>